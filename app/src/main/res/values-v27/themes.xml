<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.WhiteBoard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/default_icon</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/light_grey</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="NoteToolBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.WhiteBoard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WhiteBoard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WhiteBoard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>