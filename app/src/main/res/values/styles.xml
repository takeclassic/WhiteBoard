<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/transparent</item>
        <item name="backgroundSplit">@color/white</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>
        <item name="subtitleTextStyle">@style/ActionModeTitleTextStyle</item>
    </style>
    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/default_icon</item>
        <item name="colorPrimary">@color/default_icon</item>
        <item name="colorControlActivated">@color/default_icon</item>
    </style>
</resources>