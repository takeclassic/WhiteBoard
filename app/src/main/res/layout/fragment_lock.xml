<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.LockFragment"
    tools:layout_editor_absoluteX="-4dp"
    tools:layout_editor_absoluteY="-1dp">

    <ImageView
        android:id="@+id/lock_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close_36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lock_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="암호를 입력해주세요"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_close" />

    <ImageView
        android:id="@+id/lock_number_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_circle_24"
        app:layout_constraintEnd_toStartOf="@id/lock_number_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_title_text" />

    <ImageView
        android:id="@+id/lock_number_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_circle_24"
        app:layout_constraintEnd_toStartOf="@id/lock_number_3"
        app:layout_constraintStart_toEndOf="@id/lock_number_1"
        app:layout_constraintTop_toBottomOf="@+id/lock_title_text" />

    <ImageView
        android:id="@+id/lock_number_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_circle_24"
        app:layout_constraintEnd_toStartOf="@id/lock_number_4"
        app:layout_constraintStart_toEndOf="@id/lock_number_2"
        app:layout_constraintTop_toBottomOf="@+id/lock_title_text" />

    <ImageView
        android:id="@+id/lock_number_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock_number_3"
        app:layout_constraintTop_toBottomOf="@+id/lock_title_text" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/lock_button_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_number_1"
        custom:button_color="#ffffff"
        custom:button_text="1"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/lock_button_3"
        app:layout_constraintStart_toEndOf="@+id/lock_button_1"
        app:layout_constraintTop_toBottomOf="@+id/lock_number_1"
        custom:button_color="#ffffff"
        custom:button_text="2"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock_button_2"
        app:layout_constraintTop_toBottomOf="@+id/lock_number_1"
        custom:button_color="#ffffff"
        custom:button_text="3"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock_button_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_1"
        custom:button_color="#ffffff"
        custom:button_text="4"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock_button_6"
        app:layout_constraintStart_toEndOf="@+id/lock_button_4"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_1"
        custom:button_color="#ffffff"
        custom:button_text="5"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock_button_5"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_1"
        custom:button_color="#ffffff"
        custom:button_text="6"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock_button_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_4"
        custom:button_color="#ffffff"
        custom:button_text="7"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/lock_button_9"
        app:layout_constraintStart_toEndOf="@+id/lock_button_7"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_4"
        custom:button_color="#ffffff"
        custom:button_text="8"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock_button_8"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_4"
        custom:button_color="#ffffff"
        custom:button_text="9"
        custom:button_text_color="#000000" />

    <com.thinkers.whiteboard.common.view.CustomNumberButtonView
        android:id="@+id/lock_button_10"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_8"
        custom:button_color="#ffffff"
        custom:button_text="0"
        custom:button_text_color="#000000" />

    <ImageButton
        android:id="@+id/lock_backspace_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/baseline_backspace_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock_button_10"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_9" />

    <TextView
        android:id="@+id/lock_caution_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/lock_caution_text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lock_button_10" />


</androidx.constraintlayout.widget.ConstraintLayout>